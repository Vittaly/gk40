<% provide(:title, "Вход") %>
<h1>Вход</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label "Лицевой Счет" %>
      <%= f.text_field :Account %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
