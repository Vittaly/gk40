<% provide(:title, 'Создание объявления') %>
<h1>Объявление...</h1>

<div class="row">
  <div>
    <%= form_for(@ad) do |f| %>

        <%= render 'shared/error_messages' %>

        <%= f.label :title, 'Заголовок' %>
        <%= f.text_field :title %><br/>

        <%= f.label :content, 'Содержание' %>
        <%= f.text_area :content %><br/>

        <%= f.label :picture,'Фото' %>
        <%= f.file_field :picture %><br/>

        <%= f.submit "Сохранить" %>
    <% end %>
  </div>
</div>

