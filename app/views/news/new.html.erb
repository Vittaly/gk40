<% provide(:title, 'Создание новости') %>
<h1>Новость...</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@news) do |f| %>

        <%= render 'shared/error_messages' %>

        <%= f.label :topic, 'Заголовок' %>
        <%= f.text_field :topic %>

        <%= f.label :content, 'Содержание' %>
        <%= f.text_area :content %>

        <%= f.label :picture,'Фото' %>
        <%= f.file_field :picture %>

        <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
